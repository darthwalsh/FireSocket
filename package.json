{
  "name": "firesocket",
  "version": "1.0.0",
  "description": "A drop-in replacement for WebSocket using Firebase Realtime Database",
  "main": "firesocket-server.js",
  "scripts": {
    "build": "browserify firesocket-browser.js -o build-browser.js",
    "pretest": "eslint --fix *.js spec && tsc -p jsconfig.json",
    "test": "firebase emulators:exec --only database \"jasmine\"",
    "local": "firebase emulators:start --only database"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darthwalsh/FireSocket.git"
  },
  "keywords": [
    "websocket", "firebase", "real-time"
  ],
  "author": "Carl Walsh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/darthwalsh/FireSocket/issues"
  },
  "homepage": "https://github.com/darthwalsh/FireSocket#readme",
  "files": [
    "firesocket.js",
    "server.js",
    "socket.js"
  ],
  "devDependencies": {
    "@firebase/testing": "^0.13.0",
    "@types/jasmine": "^3.4.0",
    "@types/node": "^12.7.4",
    "@types/ws": "^6.0.3",
    "browserify": "^16.5.0",
    "eslint": "^6.3.0",
    "eslint-config-google": "^0.14.0",
    "firebase-tools": "^7.3.1",
    "jasmine": "^3.4.0",
    "jasmine-reporters": "^2.3.2",
    "typescript": "^3.6.2",
    "ws": "^7.1.2"
  },
  "dependencies": {
    "firebase-admin": "^8.7.0"
  }
}
